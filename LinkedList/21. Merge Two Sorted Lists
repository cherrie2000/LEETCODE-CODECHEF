/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* mergeTwoLists(ListNode* list1, ListNode* list2) {
            
            if(list1==NULL) return list2;
            if(list2==NULL) return list1;

            if(list1->val > list2->val){
                merge(list2,list1);
                return list2;
            }
            merge(list1,list2);
            return list1;
    }

    void merge(ListNode*&l1, ListNode*&l2){
        ListNode* front = l1; ListNode* nxt = l1->next;
        if(nxt==NULL) { l1->next=l2; return;}
        while(nxt!=NULL && l2!=NULL){
            ListNode* storel2 = NULL;

            if(l2->val>= front->val && l2->val<nxt->val){
 
                storel2 = l2->next;
                front->next = l2;
                l2->next = nxt;
                front =l2;
                l2 = storel2;

            }

            else{
                front = nxt;
                nxt = nxt->next;
                if(nxt==NULL) {front->next = l2; return;}
            }
        }
        return;
    }
};
